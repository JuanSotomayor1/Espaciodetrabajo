/* Modo oscuro */
body {
    background-color: #000000; /* Fondo oscuro */
    color: #FFFFFF; /* Texto blanco */
}

a {
    color: #FFD700; /* Enlaces en color dorado para destacarlos */
}

header, footer {
    background-color: #1E1E1E; /* Fondo oscuro para la cabecera y pie de página */
}

button, .btn {
    background-color: #333333; /* Botones con fondo oscuro */
    color: #FFFFFF; /* Texto blanco en los botones */
}

.navbar, .navbar-toggler {
    background-color: #000000; /* Fondo oscuro para la barra de navegación */
}

/* Modificar el color del texto en áreas específicas */
h1, h2, h3, h4, h5, h6 {
    color: #FFFFFF; /* Encabezados en blanco */
}

/* Modificar los fondos en áreas adicionales si es necesario */
section, .main-content {
    background-color: #121212; /* Fondo oscuro para las secciones */
}
